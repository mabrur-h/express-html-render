        <div class="px-4 py-2 bg-dark text-light mt-2 mb-5">
            <form action="/" method="post">
                <div class="form-group">
                    <label for="name">Enter Name</label>
                    <input type="text" class="form-control" id="name" aria-describedby="Name" placeholder="Enter name" name="name">
                </div>
                <div class="form-group">
                    <label for="date">Birth Date</label>
                    <input type="date" class="form-control" id="date" placeholder="Birth date" name="date">
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>

        <% if ( users[0] ) { %>
            <div class="w-100 mx-auto">
                <h2 class="h4">Filter by ages</h2>
                <a href="/filter">Filter</a>
            </div>

            <table class="table table-dark">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Birth Date</th>
                    <th scope="col">Action</th>
                </tr>
                </thead>
                <tbody>
                <%for(let user of users) { %>
                    <tr>
                        <th scope="row"><%= user.id %></th>
                        <td><%= user.name %></td>
                        <td><%= user.date %></td>
                        <td><a href="<%= user.delete %>">Delete</a></td>
                    </tr>
                <%}%>
                </tbody>
            </table>
        <% } %>
</body>
</html>
